<%- include ('partials/header.ejs') %> 
<%- include ('partials/homenavbar.ejs')%>
<body>
  <div class="container">
    <hr />
    <div class="jumbotron jumbotron-fluid" style="text-align: center;">
      <div class="container">
        <h1 class="display-4">Bem vindo</h1>
        <p class="lead">CAMPEONATO DE FUTSAL DO IFMG</p>
      </div>
    </div>
    <hr />
    <h2 style="text-align: center;">TIMES CADASTRADOS</h2>
    <hr>
    <table class="table table-bordered">
      <thead class="thead-dark">
        <tr>
          <th>Nome</th>
          <th>Número de jogadores</th>
          <th>Capitão</th>
        </tr>
      </thead>
      <tbody>
        <% teams.forEach(team => { %>
        <tr>
          <th><%= team.name %></th>
          <th><%= team.amountplayers %></th>
          <th><%= team.captain_name %></th>
        </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</body>

